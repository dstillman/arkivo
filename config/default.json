{
  "arkivo": {

    "controller": {
      "autoclean": false,
      "workers": 1,
      "listen": true,
      "timeout": 1000
    },

    "http": {
      "title": "Arkivo",
      "port": 8888,
      "api": "/api",
      "timeout": 1000
    },

    "q": {
      "prefix": "q"
    },

    "subscription": {
      "prefix": "s"
    },

    "plugins": [
      "./logger",
      "./fs"
    ],

    "redis": {
      "port": 6379,
      "host": "127.0.0.1",
      "options": {
        "parser": "hiredis"
      }
    }
  }
}
