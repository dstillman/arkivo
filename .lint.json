{
  "env": {
    "node": true
  },
  "rules": {
    // warnings
    "no-debugger": 1,
    "no-empty": 1,
    "no-invalid-regexp": 1,
    "radix": 1,
    "no-warning-comments": 1,
    "no-redeclare": 1,
    "no-unused-expressions": 1,
    "no-native-reassign": 1,
    "no-unreachable": 1,
    "no-fallthrough": 1,
    "no-extra-semi": 1,
    "no-comma-dangle": 1,
    "no-cond-assign": 1,
    "space-return-throw-case": 1,
    "max-nested-callbacks": [1, 3],
    "quotes": [1, "single", "avoid-escape"],
    "complexity": [1, 10],

    // errors
    "use-isnan": 2,
    "no-dupe-keys": 2,
    "no-loop-func": 2,
    "no-undef": 2,
    "no-dupe-keys": 2,
    "no-empty-class": 2,
    "no-self-compare": 2,
    "valid-typeof": 2,
    "no-unused-vars": 2,
    "handle-callback-err": 2,
    "no-shadow-restricted-names": 2,

    // stylistic errors
    "space-after-keywords": 2,
    "space-infix-ops": 2,
    "new-cap": 2,
    "no-spaced-func": 2,
    "no-space-before-semi": 2,
    "space-unary-word-ops": 2
  }
}
